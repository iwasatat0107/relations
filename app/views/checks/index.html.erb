<div class="contents row">
    <% if user_signed_in? && current_user.id == @client.user_id %>
        <%= link_to "セルフチェック開始", new_client_check_path, class: "post", method: :get %>
    <% end %>
  <% @checks.each do |check| %>
    <% if user_signed_in? && current_user.id == check.user_id %>
      <div class="more">
        <%= render partial: "check", locals: { check: check } %>
      </div>
    <% end %>
  <% end %>
</div>
