<div class="contents row">
  <% @clients.each do |client| %>
    <% if user_signed_in? && current_user.id == client.user_id %>
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', client_path(client.id), method: :get %>
          </li>
        </ul>
          <%= render partial: "client", locals: { client: client } %>
      <% end %>
    </div>
  <% end %>
</div>
