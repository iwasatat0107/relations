<div class="contents row">
  <% @clients.each do |client| %>
    <% if user_signed_in? && current_user.id == client.user_id %>
      <div class="more">
        <ul class="more_list">
          <button type="button" class="btn btn-outline-primary">
            <%= link_to 'お客様詳細', client_path(client.id), method: :get %>
          </button>
          <button type="button" class="btn btn-outline-secondary">
            <%= link_to 'チェック一覧', client_checks_path(client.id), method: :get %>
          </button>
        </ul>
          <%= render partial: "client", locals: { client: client } %>
      </div>
    <% end %>
  <% end %>
</div>
<% if user_signed_in? %>
    <%= link_to(new_client_path, class: 'purchase-btn') do %>
    <span class='purchase-btn-text'>新規作成</span>
    <%= image_tag 'hands.png' , size: '90x90' ,class: "purchase-btn-icon" %>
    <% end %>
  <% else %>
    <%= link_to(new_user_session_path, class: 'purchase-btn') do %>
    <span class='purchase-btn-text'>新規作成</span>
    <%= image_tag 'hands.png' , size: '90x90' ,class: "purchase-btn-icon" %>
    <% end %>
<% end %>